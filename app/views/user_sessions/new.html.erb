ログインページ

<%= form_with(url: login_path, local: true, method: :post) do |f| %>
    <div class="field">
      <%= f.label :email, t('activerecord.attributes.user.email') %><br />
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password, t('activerecord.attributes.user.password') %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
<% end %>

<%= link_to t('.to_signup_page'), new_user_path %>